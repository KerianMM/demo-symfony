{% extends 'base.html.twig' %}

{% block title %}Style index{% endblock %}

{% block body %}
    <h1>Style index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Page</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for style in styles %}
            <tr>
                <td>{{ style.id }}</td>
                <td>{{ style.title }}</td>
                <td>{{ style.description }}</td>
                <td>{{ style.page }}</td>
                <td>
                    <a href="{{ path('style_show', {'id': style.id}) }}">show</a>
                    <a href="{{ path('style_edit', {'id': style.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('style_new') }}">Create new</a>
{% endblock %}
